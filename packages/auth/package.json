{
  "name": "@vertigo/auth",
  "version": "0.1.0",
  "description": "Shared authentication and authorization for VertiGo SaaS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware/index.js",
      "types": "./dist/middleware/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3"
  },
  "peerDependencies": {
    "@prisma/client": "^7.0.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "typescript": "^5.7.3",
    "tsup": "^8.3.6"
  },
  "keywords": [
    "vertigo",
    "auth",
    "nextauth",
    "authentication"
  ],
  "license": "MIT"
}
