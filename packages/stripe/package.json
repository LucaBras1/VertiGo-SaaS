{
  "name": "@vertigo/stripe",
  "version": "0.1.0",
  "description": "Shared Stripe payment integration for VertiGo SaaS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
