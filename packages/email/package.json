{
  "name": "@vertigo/email",
  "version": "0.1.0",
  "description": "Shared email services with branding for VertiGo SaaS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./templates": {
      "import": "./dist/templates/index.js",
      "types": "./dist/templates/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "tsup": "^8.3.6"
  },
  "keywords": [
    "vertigo",
    "email",
    "resend",
    "templates"
  ],
  "license": "MIT"
}
