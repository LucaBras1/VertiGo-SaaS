// ============================================
// SUBSCRIPTIONS (RECURRING BILLING)
// ============================================

model Subscription {
  id                    String    @id @default(cuid())
  tenantId              String
  clientId              String
  client                Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  packageId             String?
  package               Package?  @relation(fields: [packageId], references: [id])

  // Pricing
  amount                Decimal   @db.Decimal(10, 2)
  currency              String    @default("CZK")

  // Billing schedule
  frequency             String    // WEEKLY, BIWEEKLY, MONTHLY, QUARTERLY, YEARLY
  nextBillingDate       DateTime
  billingDay            Int?      // Day of month (1-31) or day of week (1-7)

  // Status
  status                String    @default("active") // active, paused, cancelled, expired, past_due
  startDate             DateTime  @default(now())
  endDate               DateTime?
  pausedAt              DateTime?
  cancelledAt           DateTime?

  // Stripe integration
  stripeCustomerId      String?
  stripeSubscriptionId  String?
  stripePaymentMethodId String?

  // Auto-renewal settings
  autoRenew             Boolean   @default(true)
  retryCount            Int       @default(0)
  maxRetries            Int       @default(3)

  // Payment tracking
  lastPaymentDate       DateTime?
  lastPaymentStatus     String?
  reminderSent          Boolean   @default(false)

  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  // Relations
  generatedInvoices     Invoice[] @relation("SubscriptionInvoices")

  @@index([tenantId, status, nextBillingDate])
  @@index([clientId])
  @@map("subscriptions")
}

