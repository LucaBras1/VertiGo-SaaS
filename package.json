{
  "name": "vertigo-saas",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:ai": "turbo run test:ai",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ai:cost-report": "turbo run ai:cost-report",
    "db:push": "turbo run db:push --filter=@vertigo/database",
    "db:generate": "turbo run db:generate --filter=@vertigo/database",
    "db:migrate": "turbo run db:migrate --filter=@vertigo/database"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
